{
    "name": "pavelzanek/laravel-generator",
    "description": "File generator for faster and more efficient work with the Laravel framework",
    "keywords": [
        "generator",
        "crud",
        "laravel",
        "tailwind",
        "seeders",
        "tests",
        "pest",
        "factories",
        "livewire",
        "jetstream",
        "actions",
        "action design pattern",
        "test driven development design pattern"
    ],
    "type": "package",
    "license": "MIT",
    "authors": [
        {
            "name": "Pavel ZanÄ›k",
            "email": "zanek.pavel@gmail.com",
            "homepage": "https://www.pavelzanek.com/en",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2.0",
        "illuminate/support": "^11.0"
    },
    "require-dev": {
        "laravel/pint": "^1.17",
        "orchestra/testbench": "^9.2",
        "pestphp/pest": "^2.35",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^10.4"
    },
    "autoload": {
        "psr-4": {
            "PavelZanek\\LaravelGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PavelZanek\\LaravelGenerator\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "PavelZanek\\LaravelGenerator\\LaravelGeneratorServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ],
        "lint": [
            "@php vendor/bin/phpstan analyse"
        ],
        "test": [
            "@php vendor/bin/pest"
        ]
    }
}
